@model EntityGenerics.Application.ViewModels.ShelfViewModel

@{
    ViewData["Title"] = "Product Create";
}

<h1>Create</h1>
<hr />
<div class="container">
    <div class="row">

        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-4">
                    <label asp-for="Shelf.Name" class="control-label font-weight-bold"></label>
                    <input asp-for="Shelf.Name" class="form-control" />
                    <span asp-validation-for="Shelf.Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Shelf.Description" class="control-label font-weight-bold"></label>
                    <input asp-for="Shelf.Description" class="form-control" />
                    <span asp-validation-for="Shelf.Description" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Shelf.StoreId" class="control-label"></label>
                    <select asp-for="Shelf.StoreId" class="form-control" asp-items="ViewBag.Stores"></select>
                    <span asp-validation-for="Shelf.StoreId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>

    </div>
</div>